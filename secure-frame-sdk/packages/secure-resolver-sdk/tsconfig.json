{
  "extends": "../common/tsconfig",
  "compilerOptions": {
    "outDir": "build/main",
    "rootDir": "src",
    "lib": ["es2017", "dom"],
    "types": ["node"],
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "../common/*.ts"],
  "exclude": ["node_modules/**"],
  "compileOnSave": true
}
